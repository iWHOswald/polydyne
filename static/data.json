{
    "patterns": [
        {
            "name": "Sinusoidal",
            "type": "formula",
            "formula": "height / 2 + A * Math.sin(B * x + C) * height / 4",
            "variables": {
                "A": 2,
                "B": 0.5,
                "C": 0,
                "spacing": 1
            }
        },
        {
            "name": "Polar Graph",
            "type": "formula",
            "formula": "A * Math.sin(B * theta + C)",
            "variables": {
                "A": 500,
                "B": 100,
                "C": 0,
                "thetaIncrement": 0.0005,
                "spacing": 2
            }
        },
        
        {
            "name": "Julia Set",
            "type": "procedure",
            "procedure": [
                "let result = null;",
                "let iteration = maxIterations;", 
                "let zx = 1.5 * (x - width / 2) / (0.5 * width);",
                "let zy = (y - height / 2) / (0.5 * height);",
                "while (zx * zx + zy * zy < 4 && iteration > 0) {",
                "   let xtmp = zx * zx - zy * zy + cx;",
                "   zy = 2.0 * zx * zy + cy;",
                "   zx = xtmp;",
                "   iteration--; }",
                "result = (iteration === 0) ? 0 : (maxIterations - iteration) * 255 / maxIterations;"
            ],
            "variables": {
                "c": "0.355 + 0.355i",
                "maxIterations": 100,
                "spacing": 10
            }
        },
        {
            "name": "Equilateral Triangle",
            "type": "procedure",
            "procedure": [
                "const h = (Math.sqrt(3) / 2) * sideLength;",
                "ctx.moveTo(x, y);",
                "ctx.lineTo(x + sideLength / 2, y + h);",
                "ctx.lineTo(x - sideLength / 2, y + h);",
                "ctx.closePath();",
                "ctx.stroke();"
            ],
            "variables": {
                "sideLength": 100,
                "spacing": 50
            }
        },
        {
            "name": "Lissajous Curve",
            "type": "formula",
            "formula": "height / 2 + A * Math.sin(B * t + delta) * height / 4",
            "variables": {
                "A": 1,
                "B": 2,
                "delta": "Math.PI / 2",
                "spacing": 1,
                "tIncrement": 0.01
            }
        },
        {
            "name": "Rose Curve",
            "type": "formula",
            "formula": "width / 2 + Math.cos(k * theta) * Math.cos(theta) * width / 4",
            "variables": {
                "k": 5,
                "n": 4,
                "spacing": 1,
                "thetaIncrement": 0.01 
            }
        }
                        
        
